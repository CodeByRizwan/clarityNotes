<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chapters</title>
    <link href="/css/tailwind.css" rel="stylesheet">
    <script async src="https://analytics.vercel.app/"></script>
</head>

<body class="bg-[#f8f5f2] text-[#4a4845] flex flex-col items-center min-h-screen p-6">
    <!-- Main Container -->
    <div class="w-full max-w-2xl bg-[#ffffff] rounded-lg shadow-lg p-8 border border-[#eae6e3]">
        <!-- Header -->
        <div class="flex justify-between items-center mb-8">
            <div>
                <h1 class="text-xl font-bold text-[#4a4845] leading-tight mr-3"><%= book.name %></h1>
            </div>
            <form action="/user/logout" method="GET">
                <button
                    type="submit"
                    class="bg-[#e3dfda] text-[#4a4845] px-4 py-2 rounded-md hover:bg-[#d9d4cc] transition">
                    Logout
                </button>
            </form>
        </div>

        <!-- "All Books" Link -->
        <div class="mb-6">
            <a href=<%= `/home/books?username=${encodeURIComponent(username)}` %>
                class="text-sm text-[#817e79] hover:text-[#4a4845] underline">
                Back to All Books
            </a>
        </div>

        <!-- Chapters Section -->
        <% if (locals.chapters && chapters.length > 0) { %>
            <h2 class="text-lg font-semibold text-[#4a4845] mb-4">Chapters</h2>
            <ul class="space-y-4">
                <% chapters.forEach((chapter) => { %>
                    <li class="flex items-center justify-between bg-[#f8f7f6] hover:bg-[#f2f1ef] p-4 rounded-lg shadow-sm border border-[#eae6e3] transition">
                        <a href="/book/chapter/<%= chapter._id %>" class="block flex-grow">
                            <h3 class="font-medium text-sm text-[#4a4845]">
                                <%= chapter.number %>. <%= chapter.name %>
                            </h3>
                        </a>
                        <!-- Delete Button -->
                        <button
                            class="bg-[#e3dfda] hover:bg-[#d9d4cc] text-[#4a4845] rounded-full p-2 transition"
                            title="Delete Chapter">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                            </svg>
                        </button>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p class="text-center text-[#817e79] mt-8">No chapters added yet. Use the button below to create your first chapter.</p>
        <% } %>

        <!-- Add New Chapter Button -->
        <div class="mt-8 flex justify-center">
            <button onclick="openModal()"
                class="bg-[#e3dfda] text-[#4a4845] px-6 py-3 rounded-lg shadow-md hover:bg-[#d9d4cc] transition focus:outline-none focus:ring-2 focus:ring-[#d9d4cc]">
                Add New Chapter
            </button>
        </div>
    </div>

    <!-- Modal for Adding a New Chapter -->
    <div id="modal" class="fixed inset-0 bg-black bg-opacity-30 flex items-center justify-center hidden">
        <div class="bg-[#ffffff] w-4/5 max-w-md rounded-lg p-6 shadow-lg border border-[#eae6e3]">
            <h2 class="text-xl font-bold text-[#4a4845] mb-4">Add a New Chapter</h2>
            <form action="/book/<%= book._id %>/add-chapter" method="POST" onsubmit="closeModal()">
                <div class="mb-4">
                    <label for="name" class="block text-sm font-medium text-[#817e79]">Chapter Name</label>
                    <input
                        type="text"
                        name="name"
                        id="name"
                        class="w-full border-b border-[#eae6e3] bg-transparent text-[#4a4845] px-2 py-2 focus:outline-none focus:border-[#d9d4cc] transition"
                        placeholder="Enter chapter name"
                        required>
                </div>
                <div class="mb-4">
                    <label for="number" class="block text-sm font-medium text-[#817e79]">Chapter Number</label>
                    <input
                        type="number"
                        name="number"
                        id="number"
                        class="w-full border-b border-[#eae6e3] bg-transparent text-[#4a4845] px-2 py-2 focus:outline-none focus:border-[#d9d4cc] transition"
                        placeholder="Enter chapter number"
                        required>
                </div>
                <div class="flex justify-end space-x-4">
                    <button
                        type="button"
                        onclick="closeModal()"
                        class="bg-[#e3dfda] text-[#4a4845] px-4 py-2 rounded-md hover:bg-[#d9d4cc] transition">
                        Cancel
                    </button>
                    <button
                        type="submit"
                        class="bg-[#e3dfda] text-[#4a4845] px-4 py-2 rounded-md hover:bg-[#d9d4cc] transition">
                        Add Chapter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function openModal() {
            document.getElementById("modal").classList.remove("hidden");
        }
        function closeModal() {
            document.getElementById("modal").classList.add("hidden");
        }
    </script>
</body>

</html>
